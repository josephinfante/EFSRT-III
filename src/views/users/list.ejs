<!DOCTYPE html>
<html>
<head>
  <title><%= title || "Lista de Usuarios" %></title>
</head>
<body>
  <h1>Usuarios</h1>
  <a href="/users/create">Crear nuevo usuario</a>
  <table border="1" cellpadding="8" cellspacing="0">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Email</th>
        <th>Rol</th>
        <th>Estado</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% users.forEach(user => { %>
        <tr>
          <td><%= user.first_name %> <%= user.last_name %></td>
          <td><%= user.email %></td>
          <td><%= user.role_id %></td>
          <td><%= user.status %></td>
          <td>
            <a href="/users/<%= user.id %>">Ver</a> |
            <a href="/users/<%= user.id %>/edit">Editar</a> |
            <form action="/users/<%= user.id %>?_method=DELETE" method="POST" style="display:inline;">
              <button type="submit" onclick="return confirm('¿Estás seguro que deseas eliminar este usuario?')">Eliminar</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
