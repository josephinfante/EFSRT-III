<h1>Editar Usuario</h1>
<form method="POST" action="/users/<%= user.id %>">
  <input name="first_name" value="<%= user.first_name %>" required />
  <input name="last_name" value="<%= user.last_name %>" required />
  <input name="email" value="<%= user.email %>" type="email" required />
  <input name="password" value="<%= user.password %>" type="password" required />
  <input name="role_id" value="<%= user.role_id %>" required />
  <button type="submit">Actualizar</button>
</form>
